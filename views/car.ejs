mixin indicator(n)
  if(n.id === 0)
    li(data-target="#carousel-single" data-slide-to=n.id class="active")
  else
    li(data-target="#carousel-single" data-slide-to=n.id)

mixin figure(n)
  figure
    img(src=n.thumb alt=n.title)
    figcaption.carousel-caption
      h3=n.title
      .content=n.content
      a Lien

mixin carousel-content(n)
  if(n.id === 0)
    section.carousel-item.active
      +figure(n)
  else 
    section.carousel-item
      +figure(n)

#carousel-single.carousel.slide.add-big-bottom(data-ride="carousel" data-interval="false")
  ol.carousel-indicators
    for n in news
      +indicator(n)
      
  .carousel-inner
    for n in news
      +carousel-content(n)

  a.carousel-item-left.carousel-control-prev(href="#carousel-single" data-slide="prev")
    svg(viewBox="0 0 24 24")
      path(d="M15.422 7.406L10.828 12l4.594 4.594L14.016 18l-6-6 6-6z")

  a.carousel-item-right.carousel-control-next(href="#carousel-single" data-slide="next")
